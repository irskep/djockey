{%- macro nextPrevious(cls) -%}
<nav class="DJNextPrevious {{ cls }}">
  <a class="DJPrevious {% if not docs.previousDocTitle %}u-invisible{% endif %}" href="{{ urls.previous }}">
    {% if docs.previousDocTitle -%}
    <div class="DJNextPrevious_Label">Previous</div>
    <div class="DJNextPrevious_Link">{{ docs.previousDocTitle | safe }}</div>
    {%- endif %}
  </a>

  <a class="DJNext {% if not docs.nextDocTitle %}u-invisible{% endif %}" href="{{ urls.next }}">
    {% if docs.nextDocTitle -%}
    <div class="DJNextPrevious_Label">Next</div>
    <div class="DJNextPrevious_Link">{{ docs.nextDocTitle | safe }}</div>
    {%- endif %}
  </a>
</nav>
{%- endmacro -%}

{%- macro hamburger(width, height, row_height, row_space) %}
<svg viewBox="0 0 100 {{ row_height * 3 + row_space * 2 }}" width="{{ width }}" height="{{ height }}" xmlns="http://www.w3.org/2000/svg">
  <rect width="100" height="{{ row_height }}" rx="8"></rect>
  <rect y="{{ row_height + row_space }}" width="100" height="{{ row_height }}" rx="8"></rect>
  <rect y="{{ row_height * 2 + row_space * 2}}" width="100" height="{{ row_height }}" rx="8"></rect>
</svg>
{%- endmacro -%}

{%- macro header_project_info() -%}
{% if config.project_info %}
<div class="DJProjectInfo">
  {%- if config.project_info.github_url -%}
  <div class="DJProjectInfo_Repo">
    <a href="{{ config.project_info.github_url }}">{{ github.path or "GitHub" }}</a>
  </div>
  {%- endif %}
  {%- if config.project_info.version %}
  <div class="DJProjectInfo_Version">Version {{ config.project_info.version }}</div>
  {%- endif -%}
</div>
{% endif %}
{%- endmacro -%}

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% for cssURL in urlLists.css %}
      {%- if cssURL.endsWith('.light.css') -%}
      <link rel="stylesheet"  media="(prefers-color-scheme: light)" href="{{ cssURL }}">
      {%- elif cssURL.endsWith('.dark.css') -%}
      <link rel="stylesheet"  media="(prefers-color-scheme: dark)" href="{{ cssURL }}">
      {%- else -%}
      <link rel="stylesheet" href="{{ cssURL }}">
      {%- endif %}
    {% endfor %}
    <title>{{ config.site_name }} - {{ doc.title }}</title>

    <meta property="og:type" content="website">
    <meta name="twitter:card" content="summary">
    <meta property="og:url" content="{{ config.url_root }}">
    <meta property="twitter:url" content="{{ config.url_root }}">
    <meta property="og:title" content="{{ config.site_name }} - {{ doc.title }}">
    <meta name="twitter:title" content="{{ config.site_name }} - {{ doc.title }}">
    {% if config.project_info.description -%}
    <meta name="description" content="{{ config.project_info.description }}">
    <meta property="og:description" content="{{ config.project_info.description }}">
    <meta name="twitter:description" content="{{ config.project_info.description }}">
    {%- endif %}
    {% if config.project_info.image -%}
    <meta property="og:image" content="{{ config.url_root }}/{{ config.project_info.image }}">
    <meta name="twitter:image" content="{{ config.url_root }}/{{ config.project_info.image }}">
    {%- endif %}
  </head>
  <body>
    <header class="DJHeader">
      <div class="DJHeader_Content u-page-width">
        <div class="DJHeader_Content_Group">
          <button
            title="Show navigation"
            class="DJHeader_Hamburger DJIconButton"
            popovertarget="dj-mobile-menu"
            class="DJHeader_Hamburger">
            {{ hamburger('1.5em', '1em', 18, 16) }}
          </button>
          <h1 class="DJHeader_SiteName"><a href="{{ urls.home }}">{{ config.site_name }}</a></h1>
        </div>
        <div class="DJHeader_Content_Group">
          {{ header_project_info() }}
        </div>
      </div>
    </header>

    <main class="u-page-width">

      <div class="DJContent">
        {{ nextPrevious('m-top') }}
        <article>{{ docs.content | safe }}</article>
        {{ nextPrevious('m-bottom') }}
      </div>
      <nav class="DJTableOfContents m-sidebar">
        <div class="DJTableOfContents_Content">
          {{ docs.toc | safe }}
        </div>
      </nav>
      <nav class="DJDocTree m-sidebar">
        <div class="DJDocTree_Content">
          {{ docs.doctree | safe }}
        </div>
      </nav>
    </main>

    {%if config.html.footer_text -%}
    <footer class="DJFooter">
      <div class="DJFooter_Content u-page-width">
        {{ config.html.footer_text }}
      </div>
    </footer>
    {% endif %}

    <div popover id="dj-mobile-menu">
      <header>
        <button class="DJIconButton" popovertarget="dj-mobile-menu" title="Close">
          <svg viewBox="0 0 25 25" width="1.5em" height="1em" fill="none" xmlns="http://www.w3.org/2000/svg">
            <line x1="2" y1="2" x2="23" y2="23" stroke-width="4" stroke-linecap="round" stroke-linejoin="round" />
            <line x1="2" y1="23" x2="23" y2="2" stroke-width="4" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          Close
        </button>
      </header>
      <nav class="DJDocTree m-popover">
        <div class="DJDocTree_Content">
          {{ docs.doctree | safe }}
        </div>
      </nav>
    </div>

    {% for jsURL in urlLists.js %}
    <script src="{{ jsURL }}"></script>
    {% endfor %}
  </body>
</html>