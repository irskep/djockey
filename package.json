{
  "name": "djockey",
  "version": "0.2.6",
  "packageManager": "yarn@3.5.0",
  "engines": {
    "node": ">=17.0.0"
  },
  "license": "MIT",
  "repository": "https://github.com/irskep/djockey",
  "homepage": "https://steveasleep.com/djockey/",
  "keywords": [
    "documentation",
    "generator",
    "djot",
    "markdown",
    "pandoc"
  ],
  "bin": "./dist/cli.js",
  "main": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "prepublish": "tsc && npm run copy-files",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 3 src/plugins/static/* dist/plugins/static/",
    "copy-templates": "copyfiles -u 2 src/templates/**/* dist/templates/",
    "build": "bun build src/cli.ts --target=node --outdir=dist --root=src -e @djot/djot -e argparse -e fast-glob -e gluegun -e js-yaml -e mdast-util-to-markdown -e micromatch -e nunjucks -e shiki",
    "build-node": "npx tsc",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:windows": "set NODE_OPTIONS=\"--experimental-vm-modules\" && jest",
    "djockey": "node dist/cli.js"
  },
  "dependencies": {
    "@djot/djot": "^0.3.1",
    "argparse": "^2.0.1",
    "fast-glob": "^3.3.2",
    "gluegun": "^5.2.0",
    "js-yaml": "^4.1.0",
    "mdast-util-to-markdown": "^2.1.0",
    "mermaid": "^11.1.1",
    "micromatch": "^4.0.8",
    "mystjs": "^0.0.15",
    "nunjucks": "^3.2.4",
    "parse5": "^7.1.2",
    "shiki": "^1.14.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@djockey/linkmapper-typedoc": "^0.0.7",
    "@fontsource/ibm-plex-mono": "^5.0.14",
    "@fontsource/ibm-plex-sans": "^5.0.21",
    "@fontsource/saira-condensed": "^5.0.14",
    "@jest/globals": "^29.7.0",
    "@types/argparse": "^2.0.16",
    "@types/d3": "^7.4.3",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/log-update": "^3.1.0",
    "@types/lunr": "^2.3.7",
    "@types/mdast": "^4.0.4",
    "@types/micromatch": "^4.0.9",
    "@types/node": "^22.4.0",
    "@types/nunjucks": "^3.2.6",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "lunr": "^2.3.9",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typedoc": "^0.26.6",
    "typescript": "^5.5.4"
  }
}
